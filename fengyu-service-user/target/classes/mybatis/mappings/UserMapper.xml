<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fengyu.service.user.dao.impl.UserDaoImpl" >

  <!-- 用户 -->
  <sql id="user"> `user` </sql>

  <resultMap id="beanMap" type="com.fengyu.facade.user.entity.User" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="loginName" property="loginName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
  </resultMap>

  <select id="findByLoginName" resultMap="beanMap" parameterType="java.lang.String" >
    select
     *
    from <include refid="user"/>
    where loginName = #{loginName,jdbcType=VARCHAR}
  </select>

</mapper>